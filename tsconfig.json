{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "forceConsistentCasingInFileNames": true,
    "listEmittedFiles": true,
    "noEmitOnError": true,
    "locale": "en-US",
    "removeComments": true,
    "sourceMap": true,
    "noImplicitAny": false,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "strictBindCallApply": true,
    "strictNullChecks": false,
    "strictFunctionTypes": true,
    "strictPropertyInitialization": false,
    "esModuleInterop": false,
    "declaration": true,
    "outDir": "./dist"
  },
  "include": ["src/**/*"]
}